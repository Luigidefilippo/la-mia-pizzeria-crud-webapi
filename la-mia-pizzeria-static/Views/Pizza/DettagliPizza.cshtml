@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UserPage</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/css/Dettaglipizza.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    @Html.Partial("_Sidebar")
     @model Pizza

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center">
                    <h1 class="mt-3 mb-3">Dettagli della pizza</h1>
                </div>
                <div class="mt-4">
                    <h3>Titolo: <span>@Model.Name</span></h3>

                </div>
                <p>
                    <strong>Categoria:</strong>
                    @if (Model.Categoria != null)
                    {
                        <span>@Model.Categoria.Name</span>
                    }
                    else
                    {
                        <span>Nessuna categoria associata</span>
                    }
                </p>
                <p>
                    <strong>
                        Gusti:
                    </strong>
                    @if (Model.Gusti != null && Model.Gusti.Count > 0)
                    {
                        <ul>
                            @foreach (Gusto gusti in Model.Gusti)
                            {
                                <li>@gusti.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Non hai associato alcun gusto a questa pizza!</span>
                    }
                    </p>
                <div class="single_pizza">
                    <img class="w-50 border border-danger" src="@Model.Pathimg">
                </div>
                <div class="mt-2">
                    <h4>Descrizione:   </h4><p> @Model.Description</p>
                   
                </div>
            </div>
        </div>
    </div> 
</body>
</html>